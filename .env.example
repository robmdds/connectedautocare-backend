# ConnectedAutoCare Backend Environment Variables
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=production
DEBUG=False

# Database Configuration (if using database)
DATABASE_URL=your-database-url-here

# External API Keys
VIN_DECODER_API_KEY=your-vin-decoder-api-key
NHTSA_API_URL=https://vpic.nhtsa.dot.gov/api

# Payment Processing
HELCIM_API_KEY=your-helcim-api-key
HELCIM_API_URL=https://api.helcim.com/v2

# Email Configuration
SMTP_SERVER=your-smtp-server
SMTP_PORT=587
SMTP_USERNAME=your-email-username
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@connectedautocare.com

# Application Settings
ADMIN_EMAIL=admin@connectedautocare.com
SUPPORT_EMAIL=support@connectedautocare.com
COMPANY_NAME=ConnectedAutoCare.com

# Security Settings
CORS_ORIGINS=https://connectedautocare-frontend-robs-projects-ec1694cd.vercel.app,https://connectedautocare-frontend-psi.vercel.app
JWT_SECRET_KEY=your-jwt-secret-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

